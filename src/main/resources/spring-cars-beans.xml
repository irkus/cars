<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="CarService" class="com.germany.berlin.CarService">
        <property name="carsDao" ref="carsDao"/>
        <property name="carsExport" ref="carsExport"/>
    </bean>

    <bean id="carsDao" class="com.germany.berlin.CarsDaoOracle"/>
    <bean id="carsExport" class="com.germany.berlin.CarsExportCsv"/>

</beans>